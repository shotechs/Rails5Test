<p id="notice"><%= notice %></p>

<h1>Party List</h1>

<table>
  <thead>
    <tr>
      <td>Hosted By</td>
    <td>Host Email</td>
    <td># of Guests</td>
    <td>Guest Names</td>
    <td>Venue Name</td>
    <td>Venue Address</td>
    <td>Party Theme</td>
    <td>Party Start Time</td>
    <td>Party End Time</td>
    <td>Description</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%- if post.host_name.blank? %>
        No host was found
      <%- else %>
        <%= post.host_name %>
      <%- end %></td>
        <td><%= post.host_email %></td>
        <td><%= post.numgsts %></td>
        <td>  <%- post.guest_names.split(',').compact.each do |g| %>
        <%- f,l=g.split(' ') %>
        <%= f %>, <%= l %>
      <%- end %></td>
        <td><%= post.venue %></td>
        <td><%= post.location %></td>
        <td><%= post.theme %></td>
        <td><%= post.when %></td>
        <td><%= post.when_its_over %></td>
        <td><%= post.descript %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

